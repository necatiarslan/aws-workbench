# AWS Workbench Configuration File
# Save this file as 'aws-workbench.yaml' in your workspace root

root:
  # First bucket with shortcuts
  - s3: arn:aws:s3:::my-bucket-name
    shortcuts:
      - README.md
      - tsconfig.json
      - src/index.ts
      - package.json

  # Second bucket with shortcuts
  - s3: arn:aws:s3:::another-bucket
    shortcuts:
      - data/logs/
      - config/prod/settings.json

  # Bucket without shortcuts (plain bucket name also works)
  - s3: my-third-bucket

  # Another bucket with a single shortcut
  - s3: arn:aws:s3:::documents-bucket
    shortcuts:
      - important/files/
