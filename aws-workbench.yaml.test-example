# AWS Workbench Configuration File Example
# This demonstrates various usage patterns for the new hierarchical format

root:
  # Example 1: Bucket with multiple file shortcuts
  - s3: arn:aws:s3:::my-project-bucket
    shortcuts:
      - README.md
      - package.json
      - tsconfig.json
      - .gitignore

  # Example 2: Bucket with folder shortcuts
  - s3: arn:aws:s3:::data-bucket
    shortcuts:
      - logs/production/
      - logs/staging/
      - backups/daily/
      - config/

  # Example 3: Bucket with mixed file and folder shortcuts
  - s3: arn:aws:s3:::documents-bucket
    shortcuts:
      - important/quarterly-reports/
      - templates/invoice-template.pdf
      - contracts/2024/
      - archive/

  # Example 4: Bucket without shortcuts (plain bucket name)
  - s3: simple-bucket-name

  # Example 5: Bucket without shortcuts (ARN format)
  - s3: arn:aws:s3:::monitoring-bucket

  # Example 6: Nested path shortcuts
  - s3: arn:aws:s3:::web-assets
    shortcuts:
      - public/images/logos/
      - public/css/main.css
      - public/js/bundle.js
      - dist/production/index.html
