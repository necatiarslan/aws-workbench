{
	"compilerOptions": {
		"module": "commonjs",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"target": "ES2022",
		"outDir": "out",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node"
	},
	"exclude": [
		"node_modules",
		".vscode-test",
		"extensions"
	]
}